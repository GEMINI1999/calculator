<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:columnCount="4"
    android:orientation="horizontal"
    android:rowCount="5">
    <EditText
        android:layout_gravity="fill"
        android:layout_columnSpan="4"
        android:id="@+id/input"
        />
    　　
    <Button
        android:id="@+id/clear"
        android:text="C"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/divide"
        android:text="÷"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/multiply"
        android:text="×"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/delete"
        android:text="←"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/one"
        android:text="7"
        android:textSize="20dp"/>
    　　
    <Button
        android:id="@+id/two"
        android:text="8"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/three"
        android:text="9"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/subtraction"
        android:text="-"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/four"
        android:text="4"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/five"
        android:text="5"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/six"
        android:text="6"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/plus"
        android:text="+"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/seven"
        android:text="1"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/eight"
        android:text="2"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/nine"
        android:text="3"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/equal"
        android:layout_gravity="fill"
        android:layout_rowSpan="2"
        android:text="="
        android:textSize="20dp"/>

    <Button
        android:id="@+id/superplus"
        android:text="%"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/zero"
        android:text="0"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/point"
        android:text="."
        android:textSize="20dp"/>



</GridLayout>